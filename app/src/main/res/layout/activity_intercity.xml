<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_padding">
        <RelativeLayout
            android:id="@+id/select_destination_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:paddingLeft="@dimen/layout_paddingLeft"
            style="@style/LayoutBackgroundColor">
            <TextView
                android:id="@+id/text_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="82dp"
                android:textColorHint="#EEEEEE"
                android:hint="@string/pleaseSelectDestination"
                style="@style/Font.LeftAndCenterVertical.Bold"/>
            <Button
                android:id="@+id/button_selectDestination"
                android:layout_width="76dp"
                android:layout_height="64dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/select"
                android:theme="@style/AppTheme.Button"
                style="@style/Font.Center.Bold"
                android:onClick="clickSelectDestinationButton"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/destination_info_area"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_below="@id/select_destination_area"
            android:layout_marginTop="@dimen/between_layout_vertical_margin"
            android:padding="@dimen/layout_padding"
            android:orientation="vertical"
            style="@style/LayoutBackgroundColor">
            <LinearLayout
                android:id="@+id/required_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_required"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/required"
                    style="@style/Font.LeftAndCenterVertical.Bold"/>
                <TextView
                    android:id="@+id/text_required"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/between_component_horizontal_margin"
                    style="@style/Font.LeftAndCenterVertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fee_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_adult"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/adult"
                    style="@style/Font.LeftAndCenterVertical"/>
                <TextView
                    android:id="@+id/text_adult"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Font.LeftAndCenterVertical"/>
                <TextView
                    android:id="@+id/label_teenager"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/teenager"
                    style="@style/Font.LeftAndCenterVertical"/>
                <TextView
                    android:id="@+id/text_teenager"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Font.LeftAndCenterVertical"/>
                <TextView
                    android:id="@+id/label_child"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/child"
                    style="@style/Font.LeftAndCenterVertical"/>
                <TextView
                    android:id="@+id/text_child"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/Font.LeftAndCenterVertical"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/recyclerView_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_below="@id/destination_info_area"
            android:layout_marginTop="@dimen/between_layout_vertical_margin"
            style="@style/LayoutBackgroundColor">
            <TextView
                android:id="@+id/text_header_departure_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/departure_time"
                android:gravity="center"
                style="@style/Font.Center.Bold"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/text_header_stops_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/Font.Center.Bold"
                android:text="@string/name"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/time_table_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_below="@id/recyclerView_header" />
        <RelativeLayout
            android:id="@+id/list_empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">
            <ImageView
                android:id="@+id/list_empty_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/list_empty_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/between_component_vertical_margin"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_below="@id/list_empty_image_view"
                android:text="@string/notFoundRoutePleaseSearchAgain"
                style="@style/Font"/>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:src="@android:drawable/ic_input_add"/>
</android.support.design.widget.CoordinatorLayout>