<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorPrimary">#424242</item>
        <item name="colorAccent">#424242</item>
        <item name="colorControlNormal">#424242</item>
        <item name="colorControlHighlight">#BDBDBD</item>

        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#424242</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Font.Center" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Font.Center.Bold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Big">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.LeftAndCenterVertical" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Font.LeftAndCenterVertical.Bold" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandableListViewIndicatorLeft">
        <item name="android:expandableListPreferredChildIndicatorLeft">?android:attr/expandableListPreferredChildIndicatorLeft</item>
    </style>

    <style name="LayoutBackgroundColor">
        <item name="android:background">#757575</item>
    </style>
</resources>
